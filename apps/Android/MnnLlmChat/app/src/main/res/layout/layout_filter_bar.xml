<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:gravity="center_vertical">
    <TextView
    android:id="@+id/filter_inbox"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Inbox"
    android:background="@drawable/bg_filter_chip"
    android:textColor="?android:attr/textColorPrimary"
    android:textSize="14sp"
    android:drawableEnd="@drawable/ic_arrow_drop_down"
    android:drawablePadding="4dp"
    android:gravity="center_vertical"
    android:layout_marginEnd="8dp"/> <TextView
    android:id="@+id/filter_focused"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Focused"
    android:background="@drawable/bg_filter_chip"
    android:textColor="?android:attr/textColorPrimary"
    android:textSize="14sp"
    android:gravity="center_vertical"
    android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/filter_unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unread"
        android:background="@drawable/bg_filter_chip"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/filter_repository"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repository"
        android:background="@drawable/bg_filter_chip"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="14sp"
        android:drawableEnd="@drawable/ic_arrow_drop_down"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"/>

</LinearLayout>